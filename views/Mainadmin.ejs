/* Logo and Fixed Navbar */
.navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: rgba(4, 4, 4, 0.7);
    padding: 15px 30px;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    transition: background-color 0.3s;
    height: 130px;
}

.navbar:hover {
    background-color: rgba(22, 22, 22, 0.962);
}

.logo {
    width: 360px;
    max-width: 100%;
}

/* For Responsive Behavior */
.navbar-right {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-grow: 1;
}

.navbar-toggle,
.close-button {
    display: none;
}

.navbar ul {
    list-style-type: none;
    display: flex;
    flex-grow: 1;
    justify-content: flex-end;
    align-items: center;
    margin: -45px;
    padding: 0;
}

.navbar ul li {
    margin: 0 10px;
    transition: transform 0.3s;
}

.navbar ul li:hover {
    transform: scale(1.1);
}

.navbar ul li a {
    color: white;
    text-decoration: none;
    font-size: 18px;
    padding: 10px;
    font-weight: bolder;
    line-height: 1.5;
    transition: color 0.3s;
}

.navbar ul li a:hover {
    color: rgba(255, 255, 255, 0.8);
}

