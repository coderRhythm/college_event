<!-- Success Alert -->
<!-- Toast Notification -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="successToast" class="toast bg-success text-white align-items-center" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                Registration successful!
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<!-- Welcome & Event Stats -->
<div class="container my-4">
    <h3 class="text-center">Welcome, <%= uname %></h3>
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <p><strong>Total Registrations:</strong> <%= total_registrations %></p>
            <p><strong>Distinct Events:</strong> <%= distinct_events %></p>
        </div>
    </div>
</div>

<!-- Event Cards Section -->
<div class="container my-20">
    <div class="row">
        <% events.forEach(event => { %>
            <div class="col-md-4">
                <div class="event-card">
                    <h4><%= event.event_name %></h4>
                    <p><strong>Category:</strong> <%= event.category %></p>
                    <p><strong>Registration Date:</strong> <%= new Date(event.registration_date).toLocaleDateString() %></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<!-- Add Event Modal -->
<div class="modal fade" id="addEventModal" tabindex="-1" aria-labelledby="addEventModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="addEventForm" action="/event" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="addEventModalLabel">Add Event</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Add a hidden input field for the user's email -->
                    <input type="hidden" name="email" value="<%= uname %>"> <!-- This is the user's email -->

                    <label for="name">Event Name:</label>
                    <input type="text" id="name" name="name" required>

                    <div class="date">
                        <label for="start_date">Event Start Date:</label>
                        <input type="date" id="start_date" name="start_date" required>
                        <label for="end_date">Event End Date:</label>
                        <input type="date" id="end_date" name="end_date" required>
                    </div>

                    <label for="location">Event Location:</label>
                    <select id="location" name="location" required>
                        <option value="vivekanand_hall">Vivekanand Hall (Capacity: 200)</option>
                        <option value="dhruv_302">Dhruv 302 (Capacity: 100)</option>
                        <option value="torna_hall">Torna Hall (Capacity: 300)</option>
                        <option value="raigad_hall">Raigad Hall (Capacity: 200)</option>
                        <option value="atri_lawn">Atri Lawn (Capacity: 85)</option>
                    </select>

                    <label for="description">Event Description:</label>
                    <textarea id="description" name="description" required></textarea>

                    <label for="image">Event Image:</label>
                    <input type="file" id="image" name="image" accept="image/*">

                    <label for="type">Event Type:</label>
                    <select id="type" name="type">
                        <option value="education">Education</option>
                        <option value="social">Social</option>
                        <option value="seminar">Seminar</option>
                        <option value="free">Free</option>
                        <option value="paid">Paid</option>
                    </select>

                    <label for="is_paid">Event Cost:</label>
                    <select id="is_paid" name="is_paid">
                        <option value="free">Free</option>
                        <option value="paid">Paid</option>
                    </select>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

