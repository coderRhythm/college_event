<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Event Management</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e9f5f2;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            text-align: center;
            color: #00695c;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #00796b;
            color: #ffffff;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .button {
            background-color: #00796b;
            color: #ffffff;
            border: none;
            padding: 8px 16px;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .button:hover {
            background-color: #004d40;
        }

        #assignModal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: 1000;
            animation: fadeIn 0.5s;
        }

        #editModal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: 1000;
            animation: fadeIn 0.5s;
        }

        .modal-content {
            background-color: white;
            padding: 20px;
            max-width: 500px;
            margin: 15% auto;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            animation: slideIn 0.4s;
        }

        label {
            display: block;
            margin: 10px 0 5px;
            font-weight: bold;
        }

        select, button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideIn {
            from { transform: translateY(-50px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        @media (max-width: 768px) {
            .container {
                width: 95%;
                padding: 15px;
            }

            table, thead, tbody, th, td, tr {
                display: block;
                width: 100%;
            }

            th {
                background-color: #00796b;
                color: white;
            }

            td {
                padding: 10px;
                border-top: none;
            }

            tr {
                margin-bottom: 10px;
            }
        }
        .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
    background-color: #fff;
    margin: 10% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 50%;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

.close-button {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close-button:hover,
.close-button:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

    </style>
</head>
<body>
    <div class="container">
        <h1>Admin Dashboard - Manage Events</h1>

        <h2>Pending Events</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach(event => { %>
                    <% if (event.status === 'pending') { %>
                        <tr>
                            <td><%= event.id %></td>
                            <td><%= event.name %></td>
                            <td><%= event.start_date %></td>
                            <td><%= event.end_date %></td>
                            <td><%= event.location %></td>
                            <td><%= event.description %></td>
                            <td>
                                <form action="/admin/events/approve/<%= event.id %>" method="POST" style="display:inline;">
                                    <button class="button" type="submit">Approve</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                <% }); %>
            </tbody>
        </table>

        <h2>Approved Events</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach(event => { %>
                    <% if (event.status === 'approved') { %>
                        <tr>
                            <td><%= event.id %></td>
                            <td><%= event.name %></td>
                            <td><%= event.start_date %></td>
                            <td><%= event.end_date %></td>
                            <td><%= event.location %></td>
                            <td><%= event.description %></td>
                            <td>
                                <form action="/admin/events/disapprove/<%= event.id %>" method="POST" style="display:inline;">
                                    <button class="button" type="submit">Disapprove</button>
                                </form>
                                <button class="button" onclick="openRegistrationModal(<%= event.id %>)">See more</button>
                                <button class="button" onclick="openEditModal(<%= event.id %>, '<%= event.start_date %>', '<%= event.end_date %>')">Edit</button>
                                <button class="button" onclick="openAssignModal(<%= event.id %>)">Assign</button>
                            </td>
                        </tr>
                    <% } %>
                <% }); %>
            </tbody>
        </table>
    </div>
    <!-- Modal Structure -->
<div id="registration-modal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close-button" onclick="closeModal()">Ã—</span>
        <h2>Event Details</h2>
        <div id="modal-content">
            <!-- Dynamic content will be inserted here -->
        </div>
    </div>
</div>

    <div id="editModal" style="display:none;">
        <div class="modal-content">
            <h3>Edit Event Dates</h3>
            <form id="editForm">
                <label for="start_date">Start Date:</label>
                <input type="date" name="start_date" id="start_date" required>

                <label for="end_date">End Date:</label>
                <input type="date" name="end_date" id="end_date" required>

                <button class="button" type="button" onclick="submitEditForm()">Save Changes</button>
                <button class="button" type="button" onclick="closeEditModal()">Cancel</button>
            </form>
        </div>
    </div>

    <div id="assignModal">
        <div class="modal-content">
            <h3>Assign Faculty to Event</h3>
            <form id="assignForm">
                <label for="faculty_id">Select Faculty:</label>
                <select name="faculty_id" id="faculty_id">
                    <% users.forEach(faculty => { %>
                        <% if (faculty.category === 'faculty') { %>
                            <option value="<%= faculty.faculty_id %>"><%= faculty.name %></option>
                        <% } %>
                    <% }); %>
                </select>
                
                <button class="button" type="button" onclick="assignFaculty()">Assign</button>
                <button class="button" type="button" onclick="closeAssignModal()">Cancel</button>
            </form>
        </div>
    </div>



    <script>
        let currentEventId;

        function openEditModal(eventId, startDate, endDate) {
            currentEventId = eventId;
            document.getElementById('start_date').value = startDate;
            document.getElementById('end_date').value = endDate;
            document.getElementById('editModal').style.display = 'block';
        }

        function closeEditModal() {
            document.getElementById('editModal').style.display = 'none';
        }

        function submitEditForm() {
            const startDate = document.getElementById('start_date').value;
            const endDate = document.getElementById('end_date').value;

            fetch(`/admin/edit/${currentEventId}`, {
                method: 'put',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ start_date: startDate, end_date: endDate }),
            }).then(response => response.json())
              .then(data => {
                  if (data.message) {
                    alert("successfully edit the event");
                      window.location.reload();
                  } else {
                      alert('Failed to update event.');
                  }
              });
        }

        function openAssignModal(eventId) {
            currentEventId = eventId;
            document.getElementById('assignModal').style.display = 'block';
        }

        function closeAssignModal() {
            document.getElementById('assignModal').style.display = 'none';
        }

        function assignFaculty() {
            const facultyId = document.getElementById('faculty_id').value;

            // const facultyId = document.getElementById('faculty_id').value;
            if (facultyId) {
                window.location.href = `/admin/events/assign?event_id=${currentEventId}&faculty_id=${facultyId}`;
            }
        

        }
        function openRegistrationModal(eventId) {
    // Fetch event details via API
    fetch('/admin/total-registrations', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ eventId })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const eventData = data.data;

            if (!eventData) {
                alert(data.message);
                return;
            }

            // Populate the modal content
            const modalContent = `
                <p><strong>Event Name:</strong> ${eventData.event_name}</p>
                <p><strong>Start Date:</strong> ${new Date(eventData.start_date).toLocaleDateString()}</p>
                <p><strong>End Date:</strong> ${new Date(eventData.end_date).toLocaleDateString()}</p>
                <p><strong>Total Registrations:</strong> ${eventData.total_registrations}</p>
            `;

            document.getElementById('modal-content').innerHTML = modalContent;

            // Show the modal
            document.getElementById('registration-modal').style.display = 'block';
        } else {
            alert('Failed to fetch event details. Please try again.');
        }
    })
    .catch(error => {
        console.error('Error fetching event details:', error);
        alert('An error occurred. Please try again.');
    });
}

// Close modal function
function closeModal() {
    document.getElementById('registration-modal').style.display = 'none';
}

